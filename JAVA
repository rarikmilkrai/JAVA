// CALCULO DE IMC
package calculo.de.imc;

import java.util.Scanner;

public class CalculoDeImc {
    public static void main(String[] args) {
        Scanner leitor = new Scanner(System.in);
        System.out.println("Digite o peso: ");
        double peso = leitor.nextDouble();
        System.out.println("Digite a altura: ");
        double altura = leitor.nextDouble();
        double imc;
        imc = peso / Math.pow(altura, 2);
        System.out.println("IMC É: " + imc);
    }    
}

// CALCULO DE HORAS TRABALHADAS
package horastrabalhadas;

import java.util.Scanner;

public class HorasTrabalhadas {
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner entrada = new Scanner(System.in);
        System.out.println("Digite o valor da hora: ");
        double valorhora = entrada.nextDouble();
        System.out.println("Digite a quantidade de horas trabalhadas: ");
        double quant = entrada.nextDouble();
        double salario = valorhora * quant;
        System.out.printf("O seu salario é:R$ %, .2f", salario);
             }
         }
        
        // AUMENTO DE SALARIO
        package aumentosalario;

import java.util.Scanner;

public class Aumentosalario {
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner teclado = new Scanner(System.in);
        System.out.println("Digite seu salario: ");
        double salario = teclado.nextDouble();
        double salatual = salario * 1.25;
        System.out.printf("Seu salario com aumento de 25 porcento é: R$ %,.2f", salatual);
    }  
}

//PASSANDO UM COLCHAO PELA PORTA
package passagemdocolchao;

import java.util.Scanner;
public class Passagemdocolchao {
    public static void main(String[] args) {
        Scanner medidas = new Scanner(System.in);
        System.out.println("Digite largura do colchão: ");
        double lcolc = medidas.nextDouble();
        System.out.println("Digite o comprimento do colchão: ");
        double ccolc = medidas.nextDouble();
        System.out.println("Digite  a altura  do colchao: ");
        double acolc = medidas.nextDouble();
        System.out.println("Digite a altura da porta: ");
        double aporta = medidas.nextDouble();
        System.out.println("Digite largura da porta: ");
        double lporta = medidas.nextDouble();
        
        if (lcolc >= lporta && lcolc >= aporta || ccolc >= lporta && ccolc >= aporta)
        {
           System.out.print("Seu colchao nao passa pela porta");
         }
        else
        {
         System.out.print("seu colchao passa na porta");
        }      
    }
 }    

